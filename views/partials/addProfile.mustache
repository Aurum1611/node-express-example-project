<div>
    <h6>Register a new user</h6>
    <div id="add_profile_form">
        <form action="/users/addProfile" method="post">
            <input type="text" name="username" placeholder="Username"><br>
            <input type="text" name="name" placeholder="Name"><br>
            <input type="text" name="company" placeholder="Company"><br>
            <input type="text" name="languages" placeholder="Languages"><br>
            <input type="text" name="img_link" placeholder="Profile Image Link (Optional)"><br>
            <input type="text" name="img_credits" placeholder="Image Credits (if any)"><br>
            <input type="submit" value="submit">
        </form>
    </div>
</div>